<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        </style>

        <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
            <item name="colorAccent">#FFCC00</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:textColorPrimary">#FFFFFF</item>
            <item name="android:background">#03A9F4</item>
        </style>

    <style name="ColoredButtonOrange" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#FFC107</item>
    </style>

    <style name="ColoredButtonSky" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#B3E5FC</item>
    </style>

    <style name="ColoredButtonFacebook" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#46629D</item>
    </style>

    <style name="ColoredButtonTransparent" parent="Widget.AppCompat.Button">
