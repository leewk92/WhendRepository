<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    tools:context="net.whend.soodal.whend.view.A1_UploadActivity">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_upload"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:minHeight="50dp"
        android:background="#FFC107"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:background="#ffffffff"
            android:layout_marginRight="5dp"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/toolbar_textview"
            android:text="test"

            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_gravity="right"
            android:background="#ffffffff"
            android:layout_marginRight="3dp"></LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:id="@+id/user_clickableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/userimage_default"
                />
            <TextView
                android:id="@+id/user_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이원경"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <EditText
            android:theme="@style/Theme.App.Base"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="일정 제목 입력"
            android:textSize="12dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:id="@+id/upload_starttime"
            >

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:hint="시작"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|right" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/date"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/date_start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="날짜 입력"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="25dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/time"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/time_start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="시간 입력"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:id="@+id/upload_endtime"
            >

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:hint="끝"
                    android:textSize="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical|right"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/date"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/date_end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="날짜 입력"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/time"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/time_end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="시간 입력"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>


           </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/location"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:theme="@style/Theme.App.Base"
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="장소 입력"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
        </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/schedule_photo"
            android:background="#b6b6b6"
            android:clickable="true" />

        <EditText
            android:id="@+id/memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="메모와 태그를 입력해 주세요 (#WhenD #웬디 #일정)"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_photo_add"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha"
            android:padding="3dp"
            android:layout_gravity="right" />
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test" />


</LinearLayout>
