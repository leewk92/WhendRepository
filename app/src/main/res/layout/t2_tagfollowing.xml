                        android:layout_height="20dp"
                        android:layout_weight="2" >

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
