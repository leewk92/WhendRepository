<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/imageView5"
        android:src="@drawable/whend_3_3_00_01"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/a03_fb_pic"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:src="@drawable/userimage_default"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반갑습니다! "
                android:id="@+id/textView33"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/a03_fb_name"
                android:textStyle="bold"
                android:textColor="#3e5c99" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님"
                android:id="@+id/textView35"
                android:textColor="#FFFFFF"
                android:layout_marginRight="4dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="whenD에서 사용할 아이디를 입력해 주세요\n언제든지 계정 이름을 바꿀 수 있습니다."
            android:id="@+id/textView28"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/signup_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:textSize="15sp"
            android:inputType="text"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:hint="아이디"
            />
<!--
        <EditText
            android:id="@+id/signup_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:hint="이메일"
            android:inputType="textEmailAddress"/>
-->

        <Button
            android:theme="@style/ColoredButtonOrange"
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="whenD 시작하기"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-5dip"
            android:layout_marginRight="-5dip"
            android:capitalize="none" />

    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>