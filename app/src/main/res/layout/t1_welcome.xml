<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:src="@drawable/whend_3_3_00_01"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC000000"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/t1_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/t1_textview"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="30dp"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:gravity="center_horizontal" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:theme="@style/ColoredButtonOrange"
                    android:layout_marginLeft="-5dip"
                    android:layout_marginRight="-5dip"
                    android:layout_marginTop="-5dip"
                    android:layout_marginBottom="-5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다음"
                    android:id="@+id/t1_next"
                    android:textColor="#FFFFFF"
                    android:padding="20dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/t1_finger"
                    android:layout_gravity="center"
                    android:src="@drawable/finger_point_turned" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skip_layout"
                android:background="#77000000"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="튜토리얼은 약 1분정도 소요됩니다.\n이동하시겠습니까?"
                    android:id="@+id/skip_warning"
                    android:background="#03A9F4"
                    android:padding="10dp"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <Button
                        android:theme="@style/ColoredButtonOrange"
                        android:layout_marginLeft="-5dip"
                        android:layout_marginTop="-5dip"
                        android:layout_marginBottom="-5dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="네"
                        android:id="@+id/skip_yes"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_marginRight="-2dip" />

                    <Button
                        android:theme="@style/ColoredButtonOrange"
                        android:layout_marginRight="-5dip"
                        android:layout_marginTop="-5dip"
                        android:layout_marginBottom="-5dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="아니오"
                        android:id="@+id/skip_no"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="-2dip" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:id="@+id/skip"
                android:padding="10dp"
                android:textColor="#B6B6B6"
                android:layout_gravity="bottom|right"
                android:clickable="true" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>