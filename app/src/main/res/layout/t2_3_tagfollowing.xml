<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.whend.soodal.whend.tutorial.T2_3_tagfollowing">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal" >

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/imageView13"
                        android:scaleType="centerCrop"
                        android:src="@drawable/t2_festivals" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="#a15a5956" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="#축제"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp" />

                    <ImageView
                        android:id="@+id/t2_3_like"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/like"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="45dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/t2_3_finger"
                        android:layout_gravity="center_vertical|right"
                        android:src="@drawable/finger_point_turned" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/linearLayout7"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:layout_weight="1" >

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="125"
                                android:textSize="20dp"
                                android:textColor="#03A9F4"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="총 일정"
                                android:textSize="15dp"
                                android:textColor="#727272"
                                android:gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/t2_3_dark1"
                            android:background="#CC000000"
                            android:layout_marginRight="5dp"></LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/linearLayout8"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:layout_weight="1" >

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="25"
                                android:textSize="20dp"
                                android:textColor="#03A9F4"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="다가오는 일정"
                                android:textSize="15dp"
                                android:textColor="#727272"
                                android:gravity="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/t2_3_dark2"
                            android:background="#CC000000"
                            android:layout_marginRight="5dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/linearLayout9"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:layout_weight="1" >

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="200"
                                android:textSize="20dp"
                                android:textColor="#03A9F4"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="팔로워"
                                android:textSize="15dp"
                                android:textColor="#727272"
                                android:gravity="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/t2_3_dark3"
                            android:background="#CC000000" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CC000000"
                    android:id="@+id/t2_3_dark6"></LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:layout_marginBottom="5dp" >

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/t1_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="WhenD"
                                android:textSize="12dp"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="멜로디 포레스트 캠프 일반티켓 예매"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/date" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="7월 28일"
                                    android:textSize="12dp"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="5dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/time" />

                                <TextView
                                    android:id="@+id/textView19"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="하루 종일"
                                    android:textSize="12dp"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="5dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/location" />

                                <TextView
                                    android:id="@+id/textView20"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=""
                                    android:textSize="12dp"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="5dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" >

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="#a15a5956"
                            android:layout_marginTop="5dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:minHeight="120dp"
                            android:minWidth="480dp"
                            android:layout_marginTop="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/t1_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:text=""
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="12dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:id="@+id/imageView16"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/like_on"
                                    android:clickable="true" />
                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" >

                                    <ImageView
                                        android:id="@+id/t2_3_export"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/exporttocalendar"
                                        android:clickable="true" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:id="@+id/t2_3_finger2"
                                    android:focusableInTouchMode="false"
                                    android:src="@drawable/finger_point_turned"
                                    android:layout_gravity="center_vertical" />

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:id="@+id/imageView18"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/comment"
                                    android:clickable="true" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="12dp"
                            android:background="#B6B6B6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="24dp" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="2" >

                                <LinearLayout
                                    android:id="@+id/linearLayout10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="관심 "
                                        android:textSize="12dp" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="200"
                                        android:layout_weight="1"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="명"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="2" >

                                <LinearLayout
                                    android:id="@+id/linearLayout11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="캘린더 추가 "
                                        android:textSize="12dp" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="250명"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="2" >

                                <LinearLayout
                                    android:id="@+id/linearLayout12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="댓글 "
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/textView21"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_weight="1"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="212개"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/t2_3_dark5"
                    android:background="#CC000000"></LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/t2_3_dark4"
            android:background="#CC000000"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t2_3_text"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="30dp" />

            <Button
                android:theme="@style/ColoredButtonOrange"
                android:layout_marginLeft="-5dip"
                android:layout_marginRight="-5dip"
                android:layout_marginTop="-5dip"
                android:layout_marginBottom="-5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t2_next"
                android:textColor="#FFFFFF"
                android:padding="20dp"
                android:layout_gravity="center"
                android:text="다음" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skip_layout"
                android:padding="5dp"
                android:background="#77000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="튜토리얼은 약 1분정도 소요됩니다.\n이동하시겠습니까?"
                    android:id="@+id/skip_warning"
                    android:background="#03A9F4"
                    android:padding="10dp"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <Button
                        android:theme="@style/ColoredButtonOrange"
                        android:layout_marginLeft="-5dip"
                        android:layout_marginTop="-5dip"
                        android:layout_marginBottom="-5dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="네"
                        android:id="@+id/skip_yes"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_marginRight="-2dip" />

                    <Button
                        android:theme="@style/ColoredButtonOrange"
                        android:layout_marginRight="-5dip"
                        android:layout_marginTop="-5dip"
                        android:layout_marginBottom="-5dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="아니오"
                        android:id="@+id/skip_no"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="-2dip" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:id="@+id/skip"
                android:padding="10dp"
                android:textColor="#B6B6B6"
                android:layout_gravity="bottom|right"
                android:clickable="true" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
